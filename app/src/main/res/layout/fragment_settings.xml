<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        style="@style/Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            style="@style/Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/user_information"
                android:textColor="@color/colorBlack"
                android:textSize="20sp" />


            <ImageButton
                android:id="@+id/button_save_user_info"
                style="@style/TransparentButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_margin="0dp"
                android:paddingStart="10dp"
                android:paddingTop="0dp"
                android:paddingEnd="10dp"
                android:paddingBottom="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_save"
                android:tint="@color/colorBlack"
                android:contentDescription="@string/image"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            style="@style/Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:labelFor="@id/edit_name"
                android:text="@string/name" />

            <EditText
                android:id="@+id/edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:labelFor="@id/edit_address"
                android:text="@string/address" />

            <EditText
                android:id="@+id/edit_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:labelFor="@id/spinner_blood_type"
                android:text="@string/blood_type" />

            <EditText
                android:id="@+id/edit_blood_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/spinner_blood_type"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dialog" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:labelFor="@id/edit_allergy"
                android:text="@string/allergy" />

            <EditText
                android:id="@+id/edit_allergy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            style="@style/Footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            style="@style/Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/emergency_contacts"
                android:textColor="@color/colorBlack"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/button_add_contacts"
                style="@style/TransparentButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_margin="0dp"
                android:paddingStart="10dp"
                android:paddingTop="0dp"
                android:paddingEnd="10dp"
                android:paddingBottom="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_add"
                android:contentDescription="@string/image"
                android:tint="@color/colorBlack" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_contacts_container"
            android:layout_width="match_parent"
            style="@style/Content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
        <TextView
            style="@style/Footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>