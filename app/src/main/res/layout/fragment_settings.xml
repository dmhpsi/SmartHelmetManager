<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        style="@style/Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            style="@style/Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="User information"
                android:textColor="@color/colorBlack"
                android:textSize="20sp" />


            <ImageButton
                android:id="@+id/button_save_user_info"
                style="@style/TransparentButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_margin="0dp"
                android:paddingStart="10dp"
                android:paddingTop="0dp"
                android:paddingEnd="10dp"
                android:paddingBottom="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_save"
                android:tint="@color/colorBlack"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            style="@style/Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:labelFor="@id/edit_name"
                android:text="Name" />

            <EditText
                android:id="@+id/edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:labelFor="@id/edit_address"
                android:text="Address" />

            <EditText
                android:id="@+id/edit_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:labelFor="@id/spinner_blood_type"
                android:text="Blood type" />

            <EditText
                android:id="@+id/edit_blood_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/spinner_blood_type"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dialog" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:labelFor="@id/edit_allergy"
                android:text="Allergy" />

            <EditText
                android:id="@+id/edit_allergy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            style="@style/Footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <RelativeLayout
            style="@style/Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Emergency Number"
                android:textColor="@color/colorBlack"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/button_save_phone"
                style="@style/TransparentButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_margin="0dp"
                android:paddingStart="10dp"
                android:paddingTop="0dp"
                android:paddingEnd="10dp"
                android:paddingBottom="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_save"
                android:tint="@color/colorBlack"
                android:visibility="gone" />

        </RelativeLayout>

        <LinearLayout
            style="@style/Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:labelFor="@id/edit_number_1"
                android:text="Phone number #1" />

            <EditText
                android:id="@+id/edit_number_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:labelFor="@id/edit_number_2"
                android:text="Phone number #2" />

            <EditText
                android:id="@+id/edit_number_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:labelFor="@id/edit_number_3"
                android:text="Phone number #3" />

            <EditText
                android:id="@+id/edit_number_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone" />
        </LinearLayout>

        <TextView
            style="@style/Footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>