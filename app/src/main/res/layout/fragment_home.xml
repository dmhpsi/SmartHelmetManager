<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <LinearLayout
        style="@style/Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last connected device" />

        <LinearLayout
            style="@style/Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:columnCount="2"
                android:rowCount="3">

                <TextView
                    style="@style/TextStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:text="Name:" />

                <TextView
                    android:id="@+id/text_info_name"
                    style="@style/TextStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1" />

                <TextView
                    style="@style/TextStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:text="Address: " />

                <TextView
                    android:id="@+id/text_info_address"
                    style="@style/TextStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="1" />

                <TextView
                    style="@style/TextStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:text="Status:" />

                <TextView
                    android:id="@+id/text_info_status"
                    style="@style/TextStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="1" />
            </GridLayout>

            <ImageButton
                android:id="@+id/button_toggle_connection"
                style="@style/Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_bluetooth_disabled"
                android:tint="@color/colorWhite" />
        </LinearLayout>

        <TextView
            style="@style/Footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volume control" />

        <LinearLayout
            style="@style/Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.triggertrap.seekarc.SeekArc
                    android:id="@+id/arc_music"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:padding="30dp"
                    app:arcWidth="10dp"
                    app:progressWidth="10dp"
                    app:rotation="240"
                    app:roundEdges="true"
                    app:startAngle="0"
                    app:sweepAngle="240"
                    app:thumb="@drawable/arc_thumb"
                    app:thumbOffset="100dp"
                    app:touchInside="true" />

                <TextView
                    android:id="@+id/text_music"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableTop="@drawable/ic_music_note" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.triggertrap.seekarc.SeekArc
                    android:id="@+id/arc_call"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:padding="30dp"
                    app:arcWidth="10dp"
                    app:progressWidth="10dp"
                    app:rotation="240"
                    app:roundEdges="true"
                    app:startAngle="0"
                    app:sweepAngle="240"
                    app:thumb="@drawable/arc_thumb"
                    app:thumbOffset="100dp"
                    app:touchInside="true" />

                <TextView
                    android:id="@+id/text_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableTop="@drawable/ic_local_phone" />
            </FrameLayout>
        </LinearLayout>

        <TextView
            style="@style/Footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test" />

        <LinearLayout
            style="@style/Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/test_call"
                style="@style/Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Test call" />
        </LinearLayout>

        <TextView
            style="@style/Footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

